<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    app:cardCornerRadius="16dp">


    <RelativeLayout
        android:id="@+id/itemPermiso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/idIVTipo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/idIVDomicilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVTipo"
            android:layout_toRightOf="@id/idIVTipo"
            android:text="Domicilio"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/idFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVDomicilio"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVTipo"
            android:layout_toRightOf="@id/idIVTipo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Inicio"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/idTVFechaFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="FechaFinal"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/idTVAprobado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idFechas"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVTipo"
            android:layout_toRightOf="@id/idIVTipo"
            android:text="Aprobado"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVAprobado"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVTipo"
            android:layout_toRightOf="@id/idIVTipo"
            android:text="Descripcion"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>